{
    "manifest_version": 3,
    "name": "Inject scripts",
    "version": "1.0.0",
    "description": "Inject scripts",
    "author": "Me",
    "permissions": [],
	"offline_enabled": true,
	"web_accessible_resources": [{
		"matches": ["https://*/*", "http://*/*"],
		"resources": ["wsHook.js", "wsHook.min.js", "xhrHook.js", "xhrHook.min.js"]
	}], //先声明需要动态加载的脚本,否则触发安全策略
	"icons": {
        "128": "icon_128.png"
    },
    "content_scripts": [{
        "matches": ["https://*/*", "http://*/*"],
        "js": ["content-script.js"],
        "run_at": "document_start", //页面加载前就执行,尽早加载
        "all_frames": true //注入所有包括框架在内的页面
    }]
}